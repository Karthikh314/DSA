class Solution:
    def findKRotation(self, nums):
        # Get the size of the array
        n = len(nums)
        ans = float('inf')
        index = -1
        
        for i in range(n):
            if nums[i] < ans:
                ans = nums[i] 
                index = i      
        return index

if __name__ == "__main__":
    nums = [4, 5, 6, 7, 0, 1, 2, 3]  
    sol = Solution()
    
    ans = sol.findKRotation(nums)
    
    print(f"The array is rotated {ans} times.")
